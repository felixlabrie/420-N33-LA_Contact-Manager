<Window x:Class="_420_N33_LA_Contact_Manager.secondWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_420_N33_LA_Contact_Manager"
        mc:Ignorable="d"
        Title="Contact Information" Height="160" Width="400">
    
    <Grid ShowGridLines="true">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>


        <ListView BorderThickness="0" ItemsSource="{Binding Contacts}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                    <Label>First Name:</Label>
                    <Label Grid.Row="1">Last Name:</Label>
                    <Label Grid.Row="2" >Phone Number:</Label>
                    <Label Grid.Row="3">Email:</Label>
                    <TextBlock Grid.Column="1" Text="{Binding name}"/>
                    <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding lastName}"/>
                    <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding phoneNumber}"/>
                    <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding email}"/>
                    <Button x:Name="save" Content="Save Modifications" Click="save_Click" Height="22"  Grid.Column="0" Grid.Row="4"/>
                    <Button Name="goBack" Content="Cancel and Exit" Click="goBack_Click" Height="23" Grid.Column="1" Grid.Row="4"></Button>
                    </Grid>
                </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
    </Grid>
    
</Window>
